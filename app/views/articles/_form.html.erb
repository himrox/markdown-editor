<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <h2><%= pluralize(@article.errors.count, "error") %></h2>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br>

  <%= f.submit %>
<% end %>
